type Query {
  me: User!
}

type Mutation {
  login(email: String!, password: String!): AuthPayload!
  signup(input: SignupInput!): AuthPayload!
}

type User {
  id: ID!
  email: String!
  firstName: String
  lastName: String
  phoneNumber: String
  country: String
  job: String
}

type AuthPayload {
  token: String!
  user: User!
}

input SignupInput {
  email: String!
  password: String!
  firstName: String!
  lastName: String!
  phoneNumber: String
  country: String
  job: String
}
