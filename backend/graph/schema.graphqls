type Query {
  me: User!
}

type Mutation {
  login(email: String!, password: String!): AuthPayload!
  signup(input: SignupInput!): AuthPayload!
}

type User {
  id: ID!
  email: String!
  name: String
}

type AuthPayload {
  token: String!
  user: User!
}

input SignupInput {
  name: String!
  email: String!
  password: String!
}
